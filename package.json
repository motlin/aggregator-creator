{
	"name": "aggregator-creator",
	"description": "CLI for managing Maven repositories and creating aggregator POMs",
	"version": "0.0.0",
	"author": "Craig P. Motlin",
	"bin": {
		"aggregator": "./bin/run.js"
	},
	"bugs": "https://github.com/motlin/aggregator-creator/issues",
	"dependencies": {
		"@oclif/core": "4.8.0",
		"@oclif/plugin-help": "6.2.36",
		"chalk": "5.6.2",
		"execa": "9.6.1",
		"fs-extra": "11.3.3",
		"inquirer": "13.2.1",
		"log-update": "7.0.2",
		"xml2js": "0.6.2",
		"xmlbuilder2": "4.0.3",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@eslint/compat": "2.0.1",
		"@oclif/prettier-config": "0.2.1",
		"@oclif/test": "4.1.16",
		"@types/chai": "5.2.3",
		"@types/fs-extra": "11.0.4",
		"@types/mocha": "10.0.10",
		"@types/node": "25.0.9",
		"@types/sinon": "21.0.0",
		"@types/xml2js": "0.4.14",
		"@typescript-eslint/parser": "8.53.1",
		"chai": "6.2.2",
		"eslint": "9.39.2",
		"eslint-config-oclif": "6.0.132",
		"eslint-config-prettier": "10.1.8",
		"mocha": "11.7.5",
		"oclif": "4.22.67",
		"prettier": "3.8.0",
		"shx": "0.4.0",
		"sinon": "21.0.1",
		"ts-node": "10.9.2",
		"tsx": "4.21.0",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"files": [
		"./bin",
		"./dist",
		"./oclif.manifest.json"
	],
	"homepage": "https://github.com/motlin/aggregator-creator",
	"keywords": [
		"oclif",
		"cli",
		"maven",
		"aggregator",
		"pom"
	],
	"publishConfig": {
		"access": "public"
	},
	"license": "Apache 2.0",
	"main": "dist/index.js",
	"type": "module",
	"oclif": {
		"bin": "aggregator",
		"dirname": "aggregator",
		"commands": "./dist/commands",
		"plugins": [
			"@oclif/plugin-help"
		],
		"topicSeparator": " ",
		"topics": {
			"repo": {
				"description": "Repository management commands"
			},
			"aggregator": {
				"description": "Maven aggregator POM management"
			}
		}
	},
	"repository": "motlin/aggregator-creator",
	"scripts": {
		"build": "shx rm -rf dist && tsc -b",
		"lint": "eslint --fix",
		"format": "biome format --write . && prettier --write .",
		"typecheck": "tsc --noEmit",
		"ci:eslint": "eslint",
		"ci:prettier": "prettier --check \"**/*.{ts,json,yaml,yml}\"",
		"ci:biome": "biome format",
		"ci:typecheck": "tsc --noEmit",
		"postpack": "shx rm -f oclif.manifest.json",
		"posttest": "npm run lint",
		"prepack": "oclif manifest && oclif readme",
		"test": "CHAI_TRUNCATE_THRESHOLD=0 mocha --forbid-only \"test/**/*.test.ts\"",
		"version": "oclif readme && git add README.md",
		"prepublishOnly": "npm run build && npm test && npm run lint",
		"release:patch": "npm version patch && npm publish",
		"release:minor": "npm version minor && npm publish",
		"release:major": "npm version major && npm publish"
	},
	"types": "dist/index.d.ts"
}
